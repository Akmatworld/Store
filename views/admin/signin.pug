include head.pug
body
  // Site wrapper
  .wrapper.custom-wrapper-signin
    .sigin
      .card.card-primary
        .card-header
          h3.card-title.custom-title-signin
            | Store CMS
        // /.card-header
        // form start
        form#quickForm(role='form' action="" + baseUrl + "/signin" method="post")
          .card-body
            .form-group
              label(for='login') Логин
              input#login.form-control(type='text' name='login')
            .form-group
              label(for='password') Пароль
              input#password.form-control(type='password' name='password')
            .form-group.mb-0
              label.text-error-signin= error
          // /.card-body
          .card-footer
            button.btn.btn-primary(type='submit') Войти

  // ./wrapper
  // jQuery
  script(src='/private/plugins/jquery/jquery.min.js')
  // Bootstrap 4
  script(src='/private/plugins/bootstrap/js/bootstrap.bundle.min.js')
  // overlayScrollbars
  script(src='/private/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js')
  // AdminLTE App
  script(src='/private/js/adminlte.min.js')
  // AdminLTE for demo purposes
  script(src='/private/js/demo.js')
